        <item name="colorAccent">@color/colorAccent_purple</item>

        <!-- 툴바 색깔 -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/colorPrimaryText_brown</item>

        <!-- 커스텀 색 -->
        <item name="backgroundColorPrimary">@style/backgroundColorPrimary_purple</item>
        <item name="backgroundColorPrimaryDemiLight">@style/backgroundColorPrimaryDemiLight_purple</item>
        <item name="textColorPrimaryText">@style/textColorPrimaryText_purple</item>
        <item name="textColorSecondaryText">@style/textColorSecondaryText_purple</item>
        <item name="textColorDateText">@style/textColorDateText_purple</item>
    </style>

    <style name="PurpleTheme.NoActionBar" parent="PurpleTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- yellow theme -->
    <style name="YellowTheme" parent="Theme.AppCompat.Light.DarkActionBar">
