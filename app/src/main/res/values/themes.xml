<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="BrownTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- 기본 머티리얼 색상 -->
        <item name="colorPrimary">@color/colorPrimary_brown</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_brown</item>
        <item name="colorAccent">@color/colorAccent_brown</item>

        <!-- 툴바 색깔 -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/colorPrimaryText_brown</item>

        <item name="backgroundColorPrimary">@style/backgroundColorPrimary_brown</item>
        <item name="backgroundColorPrimaryDemiLight">@style/backgroundColorPrimaryDemiLight_brown</item>
        <item name="textColorPrimaryText">@style/textColorPrimaryText_brown</item>
        <item name="textColorSecondaryText">@style/textColorSecondaryText_brown</item>
        <item name="textColorDateText">@style/textColorDateText_brown</item>

    </style>

    <style name="BrownTheme.NoActionBar" parent="BrownTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- purple theme -->

