        <item name="backgroundColorPrimaryDemiLight">@style/backgroundColorPrimaryDemiLight_yellow</item>
        <item name="textColorPrimaryText">@style/textColorPrimaryText_yellow</item>
        <item name="textColorSecondaryText">@style/textColorSecondaryText_yellow</item>
