<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_brown</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_brown</item>
        <item name="colorAccent">@color/colorAccent_brown</item>

        <!-- 툴바 색깔 -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/colorPrimaryText_brown</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomDialog" parent="AppTheme">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">0dp</item>
    </style>

    <!--brown theme style-->
    <style name="backgroundColorPrimary_brown">
        <item name="android:background">@color/colorPrimary_brown</item>
    </style>

    <style name="backgroundColorPrimaryDemiLight_brown">
        <item name="android:background">@color/colorPrimaryDemiLight_brown</item>
    </style>

    <style name="textColorPrimaryText_brown">
        <item name="android:textColor">@color/colorPrimaryText_brown</item>
    </style>

    <style name="textColorSecondaryText_brown">
        <item name="android:textColor">@color/colorSecondaryText_brown</item>
    </style>

    <style name="textColorDateText_brown">
        <item name="android:textColor">@color/white</item>
    </style>

    <!--purple theme style-->
    <style name="backgroundColorPrimary_purple">
        <item name="android:background">@color/colorPrimary_purple</item>
    </style>

    <style name="backgroundColorPrimaryDemiLight_purple">
        <item name="android:background">@color/colorPrimaryDemiLight_purple</item>
    </style>

    <style name="textColorPrimaryText_purple">
        <item name="android:textColor">@color/colorPrimaryText_purple</item>
    </style>

    <style name="textColorSecondaryText_purple">
        <item name="android:textColor">@color/colorSecondaryText_purple</item>
    </style>

    <style name="textColorDateText_purple">
        <item name="android:textColor">@color/white</item>
    </style>

    <!--yellow theme style-->
    <style name="backgroundColorPrimary_yellow">
        <item name="android:background">@color/colorPrimary_yellow</item>
    </style>

    <style name="backgroundColorPrimaryDemiLight_yellow">
        <item name="android:background">@color/colorPrimaryDemiLight_yellow</item>
    </style>

    <style name="textColorPrimaryText_yellow">
        <item name="android:textColor">@color/colorPrimaryText_yellow</item>
    </style>

    <style name="textColorSecondaryText_yellow">
        <item name="android:textColor">@color/colorSecondaryText_yellow</item>
    </style>

    <style name="textColorDateText_yellow">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
